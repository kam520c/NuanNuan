            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_margin="10dip"
                android:background="@drawable/star_today_bg1"
                android:orientation="vertical"
                android:padding="10sp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text0"
                        style="@style/all_start_txt"
                        android:background="@drawable/star_today_text0_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <RatingBar
                        android:id="@+id/rtb0"
                        style="@style/ratingbar_style"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text1"
                        style="@style/all_start_txt"
                        android:background="@drawable/star_today_text1_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <RatingBar
                        android:id="@+id/rtb1"
                        style="@style/ratingbar_style"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text2"
                        style="@style/all_start_txt"
                        android:background="@drawable/star_today_text2_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <RatingBar
                        android:id="@+id/rtb2"
                        style="@style/ratingbar_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text3"
                        style="@style/all_start_txt"
                        android:background="@drawable/star_today_text3_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <RatingBar
                        android:id="@+id/rtb3"
                        style="@style/ratingbar_style"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
